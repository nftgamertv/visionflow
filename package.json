{
  "name": "visionflow-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise-grade computer vision platform",
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/*' dev",
    "build": "pnpm --filter './apps/web' build",
    "lint": "pnpm --filter './apps/web' lint",
    "test": "pnpm --filter './apps/*' test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --filter './apps/web' type-check",
    "clean": "pnpm --parallel --filter './apps/*' --filter './packages/*' clean"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
